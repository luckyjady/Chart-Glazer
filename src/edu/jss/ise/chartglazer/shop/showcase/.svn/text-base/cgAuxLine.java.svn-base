package edu.jss.ise.chartglazer.shop.showcase;

import java.awt.Point;

/**
 * Helps draw a line given two points.
 * @author naren
 */
public class cgAuxLine
{
	/**
	 * The starting <code>Point</code> of this line.
	 */
	protected  Point p1;
	/**
	 * The ending <code>Point</code> of this line.
	 */
	protected  Point p2;

	/**
	 * Returns the starting <code>Point</code> of this line.
	 * @return The starting <code>Point</code> of this line.
	 */
	public Point getP1()
	{
		return p1;
	}

	/**
	 * Returns the ending <code>Point</code> of this line.
	 * @return The ending <code>Point</code> of this line.
	 */
	public Point getP2()
	{
		return p2;
	}

	/**
	 * Sets the starting <code>Point</code> of this line.
	 * @param p1 The starting <code>Point</code> of this line.
	 */
	public void setP1(Point p1)
	{
		this.p1 = p1;
	}

	/**
	 * Sets the ending <code>Point</code> of this line.
	 * @param p2 The ending <code>Point</code> of this line.
	 */
	public void setP2(Point p2)
	{
		this.p2 = p2;
	}
}
